<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentLoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/flo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Sign In"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/hitam"
        android:textSize="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="334dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:elevation="1dp"
            android:src="@drawable/logo_guc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="288dp"
                android:layout_height="223dp"
                android:layout_gravity="center"
                android:layout_marginTop="85dp"
                app:cardCornerRadius="10dp"
                app:contentPaddingBottom="15dp"
                app:contentPaddingLeft="25dp"
                app:contentPaddingRight="25dp"
                app:contentPaddingTop="15dp">

                <LinearLayout
                    android:layout_width="247dp"
                    android:layout_height="205dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/etLoginName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="30dp"
                        android:drawableLeft="@drawable/ic_black"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="User Email"
                        android:inputType="textEmailAddress" />


                    <EditText
                        android:id="@+id/etLoginPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="numberPassword"
                        tools:layout_editor_absoluteX="93dp"
                        tools:layout_editor_absoluteY="419dp" />

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:text="Forgot Password?"
                        android:textColor="@color/hitam"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnLoginUser"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/putih"
        android:gravity="center"
        android:text="SIGN IN"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="508dp" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No of attempt remaining:"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="590dp"
        android:textColor="@color/hitam"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New User? Click here to SignUp!"
        android:textStyle="bold"
        android:textColor="@color/hitam"
        android:gravity="center"
        android:textSize="15sp"/>

</LinearLayout>