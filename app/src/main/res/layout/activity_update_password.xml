<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePasswordActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/flo">

    <ImageView
        android:layout_width="134dp"
        android:layout_height="124dp"
        android:src="@drawable/password"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WANT TO CHANGE YOUR PASSWORD?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/hitam"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the new password and click change button"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etSavePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="141dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CHANGE"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="233dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/putih"
        android:textSize="15sp"/>

</LinearLayout>